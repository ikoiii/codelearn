<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal storage for code files -->
    <files-path name="internal_files" path="code_files/" />

    <!-- Cache directory for temporary files -->
    <cache-path name="cache_files" path="temp/" />

    <!-- External storage for exported files -->
    <external-files-path name="external_files" path="exports/" />

    <!-- External cache for previews -->
    <external-cache-path name="external_cache" path="previews/" />

    <!-- Root external storage for user accessibility -->
    <external-path name="external_storage" path="Android/data/com.codelearn.android/files/" />
</paths>