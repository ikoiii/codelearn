<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== COMPONENT STYLES ==================== -->

    <!-- Card Variants -->
    <style name="Widget.App.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
    </style>

    <style name="Widget.App.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surfaceVariant</item>
    </style>

    <style name="Widget.App.Card.Clickable" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Button Variants -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Extended FAB -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Input Field Variants -->
    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.App.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxBackgroundColor">@color/md_theme_light_surfaceVariant</item>
    </style>

    <!-- Chip Variants -->
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/md_theme_light_outline</item>
        <item name="chipBackgroundColor">@color/md_theme_light_surfaceVariant</item>
    </style>

    <style name="Widget.App.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
        <item name="chipBackgroundColor">@color/md_theme_light_secondaryContainer</item>
        <item name="android:textColor">@color/md_theme_light_onSecondaryContainer</item>
    </style>

    <style name="Widget.App.Chip.Entry" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Caption</item>
        <item name="chipBackgroundColor">@color/md_theme_light_tertiaryContainer</item>
        <item name="android:textColor">@color/md_theme_light_onTertiaryContainer</item>
    </style>

    <!-- Progress Indicator -->
    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackCornerRadius">4dp</item>
        <item name="trackThickness">8dp</item>
        <item name="indicatorColor">@color/md_theme_light_primary</item>
        <item name="trackColor">@color/md_theme_light_surfaceContainer</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">40dp</item>
        <item name="indicatorColor">@color/md_theme_light_primary</item>
        <item name="trackColor">@color/md_theme_light_surfaceContainer</item>
        <item name="trackThickness">4dp</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigation</item>
        <item name="android:background">@color/md_theme_light_surfaceContainer</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Toolbar Variants -->
    <style name="Widget.App.Toolbar.Primary" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="subtitleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar.Title</item>
    </style>

    <style name="Widget.App.Toolbar.Surface" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_surface</item>
        <item name="titleTextColor">@color/md_theme_light_onSurface</item>
        <item name="subtitleTextColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:elevation">2dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar.Title</item>
    </style>

    <!-- Image Views -->
    <style name="Widget.App.ImageView.Circle" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Circle</item>
    </style>

    <style name="Widget.App.ImageView.Rounded" parent="">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Divider -->
    <style name="Widget.App.Divider" parent="">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_theme_light_outline</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!-- Switch -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/md_theme_light_primary</item>
        <item name="trackTint">@color/md_theme_light_surfaceContainerHigh</item>
    </style>

    <!-- SeekBar -->
    <style name="Widget.App.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/md_theme_light_primary</item>
        <item name="android:thumbTint">@color/md_theme_light_primary</item>
    </style>

    <!-- Rating Bar -->
    <style name="Widget.App.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/md_theme_light_primary</item>
    </style>

    <!-- ==================== LAYOUT STYLES ==================== -->

    <!-- Container Styles -->
    <style name="Widget.App.Container.Screen" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/md_theme_light_background</item>
    </style>

    <style name="Widget.App.Container.Card" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_card_ripple</item>
    </style>

    <style name="Widget.App.Container.Section" parent="">
        <item name="android:layout_marginVertical">16dp</item>
    </style>

    <!-- List Item Styles -->
    <style name="Widget.App.ListItem.SingleLine" parent="">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.App.ListItem.TwoLine" parent="">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.App.ListItem.ThreeLine" parent="">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:minHeight">88dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- ==================== SHAPE APPEARANCES ==================== -->

    <style name="ShapeAppearance.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.Small" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.ExtraLarge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- ==================== TEXT APPEARANCES ==================== -->

    <!-- Toolbar Text -->
    <style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Toolbar.Subtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Headings -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <!-- Titles -->
    <style name="TextAppearance.App.Title.Large" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Title.Small" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Body Text -->
    <style name="TextAppearance.App.Body.Large" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextAppearance.App.Body.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.App.Body.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <!-- Labels and Captions -->
    <style name="TextAppearance.App.Label.Large" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Label.Medium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.Label.Small" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Code and Monospace Text -->
    <style name="TextAppearance.App.Code" parent="">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/md_theme_light_surfaceContainer</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TextAppearance.App.Code.Inline" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:background">@drawable/bg_code_inline</item>
    </style>

    <!-- ==================== SPECIFIC COMPONENT STYLES ==================== -->

    <!-- Course Card -->
    <style name="Widget.App.Card.Course" parent="Widget.App.Card.Clickable">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <!-- Lesson Item -->
    <style name="Widget.App.ListItem.Lesson" parent="Widget.App.ListItem.TwoLine">
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <!-- Achievement Card -->
    <style name="Widget.App.Card.Achievement" parent="Widget.App.Card.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Quiz Option -->
    <style name="Widget.App.Card.QuizOption" parent="Widget.App.Card.Outlined">
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Progress Indicator Card -->
    <style name="Widget.App.Card.Progress" parent="Widget.App.Card.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surfaceVariant</item>
    </style>

    <!-- Search Bar -->
    <style name="Widget.App.SearchBar" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <!-- Search View -->
    <style name="Widget.App.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:elevation">0dp</item>
    </style>

    <!-- ==================== DIALOG AND OVERLAY STYLES ==================== -->

    <!-- Bottom Sheet -->
    <style name="Widget.App.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.Large</item>
        <item name="backgroundTint">@color/md_theme_light_surface</item>
    </style>

    <!-- Alert Dialog -->
    <style name="Widget.App.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <!-- Snackbar -->
    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:background">@drawable/bg_snackbar</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.Medium</item>
    </style>

    <!-- ==================== ELEVATION AND OVERLAY STYLES ==================== -->

    <style name="Widget.App.Elevation.None" parent="">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.App.Elevation.Small" parent="">
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.App.Elevation.Medium" parent="">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.App.Elevation.Large" parent="">
        <item name="android:elevation">8dp</item>
    </style>

</resources>